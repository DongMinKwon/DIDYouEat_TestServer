// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Item {
  token_id           Int         @id
  created_at         DateTime
  comment            String
  User               User?       @relation(fields: [user_wallet_address], references: [wallet_address])
  user_wallet_address String?
  Collection         Collection? @relation(fields: [colelction_id], references: [colelction_id])
  colelction_id      String?
}

model User {
  wallet_address String @id
  username       String
  items          Item[]
}

model Owner {
  owner_id    String       @id
  owner_pw    String
  collections Collection[]
}

model Collection {
  colelction_id String  @id
  img_url       String
  created_at    String
  coordinate_x  Int
  coordinate_y  Int
  events        Event[]
  items         Item[]
  minted        Int
  shop_owner_id String
  shop_name     String
  Owner         Owner?  @relation(fields: [owner_id], references: [owner_id])
  owner_id      String?
}

model Event {
  id            Int         @id
  collection_id String
  content       String
  Collection    Collection? @relation(fields: [colelction_id], references: [colelction_id])
  colelction_id String?
}
